<h1 class="h3 mb-4">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @properties.size == 0 %>
      <tr>
        <td colspan="8">No properties to display.</td>
      </tr>
    <% else %>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.name %></td>
          <td><%= property.address.truncate(50) %></td>
          <td><%= number_to_currency property.price %></td>
          <td><%= property.rooms %></td>
          <td><%= property.bathrooms %></td>
          <td><%= link_to 'Show', property %></td>
          <td><%= link_to 'Edit', edit_property_path(property) %></td>
          <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Property', new_property_path, class: "btn btn-success" %>
